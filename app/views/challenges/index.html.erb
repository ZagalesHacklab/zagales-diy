<div class="row">
<div class="large-12 columns">
    <div class="tabs-nav">
        <dl class="tabs" data-tab>
            <dd class="active"><a href="#challenges">Retos</a></dd>
            <dd><a href="#howtoplay">Cómo jugar</a></dd>
        </dl>
    </div>
    <div class="tabs-content">
        <div class="content active" id="challenges">
            <div class="sub-nav-challenges">
                <dl class="sub-nav">
                    <dt>Categorías:</dt>
                    <dd class="active"><a href="#">Todas</a></dd>
                    <dd><a href="#">Arduino</a></dd>
                    <dd><a href="#">Programación</a></dd>
                    <dd><a href="#">Manualidades</a></dd>
                    <dd><a href="#">Ciencia</a></dd>
                </dl>
            </div>
            <!-- .sub-nav-challenges -->
            <div class="thumbs-container">
                <div class="row">
                    <div class="medium-6 large-4 columns" ng-repeat="challenge in challenges">
                    <% @challenges.each do |challenge| %>

                          <article class="thumb">
                              <div class="thumb__image">
                                  <%= link_to 'Show', challenge, class: 'show' %>
                                      <%= image_tag challenge.image_url %>

                              </div>
                              <div class="thumb__title">
                                  <header><%= challenge.title %></header>
                              </div>
                              <div class="thumb__meta">
                                  <a href="#">
                                      <img ng-src="{{challenge.avatar}}" alt="avatar">
                                      <span>{{challenge.username}}</span>
                                  </a>

                                  <div class="thumb__cats right">
                                      <ul class="inline-list">
                                          <!--<li ng-repeat="tag in challenge.tags | formatTags track by challenge.id+$index">-->
                                              <!--<a href="#">{{tag}}</a>-->
                                          <!--</li>-->
                                      </ul>
                                  </div>
                              </div>
                          </article>

                    <% end %>
                    </div>
                </div>
            </div>
            <!-- .thumbs-container -->
            <div class="challenges-pagination">
                <p>&nbsp;</p>

                <div class="pagination-centered">
                    <ul class="pagination">
                        <li class="arrow unavailable"><a href="">&laquo;</a></li>
                        <li class="current"><a href="">1</a></li>
                        <li><a href="">2</a></li>
                        <li><a href="">3</a></li>
                        <li><a href="">4</a></li>
                        <li class="unavailable"><a href="">&hellip;</a></li>
                        <li><a href="">12</a></li>
                        <li><a href="">13</a></li>
                        <li class="arrow"><a href="">&raquo;</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="content" id="howtoplay">
            <p>Cómo jugar</p>
        </div>
    </div>
</div>
</div>

